<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="edu.cwru.students.nutrientbuddy.ViewRecipeActivity"
    android:id="@+id/layoutId4">

    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--app:popupTheme="@style/AppTheme.PopupOverlay"-->
        <!--android:background="@color/colorPrimary"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/recipe_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="72dp"
            android:text="Name: "
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recipe_name_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/recipe_text"
            android:layout_below="@+id/recipe_text"
            android:layout_marginTop="12dp"
            android:text="Test!!"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingredients_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/directions_text"
            android:layout_below="@+id/directions_text"
            android:layout_marginTop="70dp"
            android:text="Ingredients: "
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recipe_ingr_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/directions_text"
            android:layout_below="@+id/directions_text"
            android:layout_marginTop="13dp"
            android:text="Test!!"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/directions_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/recipe_text"
            android:layout_below="@+id/recipe_text"
            android:layout_marginTop="65dp"
            android:text="Directions: "
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recipe_dir_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ingredients_text"
            android:layout_below="@+id/ingredients_text"
            android:layout_marginTop="20dp"
            android:text="Test!!"
            android:textSize="30dp"
            android:textStyle="bold" />


        <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/create_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="59dp"
            android:onClick="addRecipeToList"
            android:text="Done" />

        <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/delete_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/create_recipe"
            android:layout_alignBottom="@+id/create_recipe"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/create_recipe"
            android:text="Delete" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>


