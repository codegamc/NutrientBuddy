<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="edu.cwru.students.nutrientbuddy.ViewRecipeActivity"
    android:id="@+id/layoutId4">

    <!--<android.support.v7.widget.Toolbar-->
    <!--android:id="@+id/toolbar"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="?attr/actionBarSize"-->
    <!--app:popupTheme="@style/AppTheme.PopupOverlay"-->
    <!--android:background="@color/colorPrimary"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/food_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="22dp"
            android:text="Name: "
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/food_name_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/food_text"
            android:layout_below="@+id/food_text"
            android:layout_marginTop="12dp"
            android:text="Test!!"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calories_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories: "
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/food_name_received"
            android:layout_alignStart="@+id/food_name_received" />

        <TextView
            android:id="@+id/food_calories_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test!!"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/carbs_text"
            android:layout_alignStart="@+id/food_carbs_received" />

        <TextView
            android:id="@+id/carbs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbs: "
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/food_text" />

        <TextView
            android:id="@+id/food_carbs_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Test!!"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/calories_text"
            android:layout_alignStart="@+id/calories_text" />


        <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/add_fooditem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="59dp"
            android:onClick="addItemToList"
            android:text="Done" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>


