<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="edu.cwru.students.nutrientbuddy.ViewNutritionActivity"
    android:id="@+id/layoutId"
    android:background="#d1e9f4">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:background="#1aa89e"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="Add Item"
            android:textAlignment="center"
            android:textColor="#1aa89e"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="31dp"
            android:layout_toStartOf="@+id/title"
            android:text="Item Name: "
            android:textColor="#1aa89e"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/itemNameEdit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/itemName"
            android:layout_toEndOf="@+id/itemName" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/itemName"
            android:layout_below="@+id/itemName"
            android:layout_marginTop="21dp"
            android:text="Quantity: "
            android:textColor="#1aa89e"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/quantityEdit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemName"
            android:layout_toEndOf="@+id/quantity" />

        <TextView
            android:id="@+id/expectedPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/quantity"
            android:layout_below="@+id/quantity"
            android:layout_marginTop="23dp"
            android:text="Expected Price: "
            android:textColor="#1aa89e"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/expectedPriceEdit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/expectedPrice"
            android:layout_toEndOf="@+id/expectedPrice" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="66dp"
            android:text=" Add "
            android:background="#1b4057"
            android:textColor="#ffffff"
            android:id="@+id/add_fooditem"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>


