<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cwru.students.nutrientbuddy">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchScreenActivity"
            android:label="@string/title_activity_search_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewNutritionActivity"
            android:label="@string/title_activity_view_nutrition"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShoppingListActivity"
            android:label="ShoppingListActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".RecipeListActivity"
            android:label="RecipeListActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".EditRecipeActivity"
            android:label="EditRecipeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ViewRecipeActivity"
            android:label="ViewRecipeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".EditShoppingListActivity"
            android:label="EditRecipeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ViewShopListItemActivity"
            android:label="ViewRecipeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>